@model IEnumerable<CIT280App.Models.UserModel>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center jumbotron bg-info text-white">All Jobs</h2>

<p>
    @Html.ActionLink("Create New", "CreateUserDashboard")
</p>
@using (Html.BeginForm("Index", "UserModel", FormMethod.Get))
{
    <p>
        Search by name: @Html.TextBox("searchString", ViewBag.CurrentFilter as string)
        <input type="submit" value="Search" />
    </p>
}
<table class="table text-center">

    <tr>
        <th>
            @Html.ActionLink("User Type", "Index", new
         {
             sortOrder = ViewBag.RoleSortParm,
             currentFilter = ViewBag.CurrentFilter
         })
        </th>
        <th>
            @Html.ActionLink("First Name", "Index", new
          {
              sortOrder = ViewBag.FirstNameSortParm,
              currentFilter = ViewBag.CurrentFilter
          })
        </th>
        <th>
            @Html.ActionLink("Last Name", "Index", new
         {
             sortOrder = ViewBag.LastNameSortParm,
             currentFilter = ViewBag.CurrentFilter
         })
        </th>
        <th>
            @Html.ActionLink("City", "Index", new
                    {
                        sortOrder = ViewBag.CitySortParm,
                        currentFilter = ViewBag.CurrentFilter
                    })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.ProfilePic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reviews)
            </th>*@
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.ProfilePic)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Reviews)
                </td>*@
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
